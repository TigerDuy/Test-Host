# Production Environment Variables for Railway

# Application
NODE_ENV=production

# Backend Configuration
PORT=5001
JWT_SECRET=your-production-jwt-secret-very-secure-key-2025

# Database (Railway will provide these)
DATABASE_URL=postgresql://user:password@host:port/database
REDIS_URL=redis://user:password@host:port

# CORS Configuration
FRONTEND_URL=https://your-frontend-domain.railway.app

# Frontend Configuration
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=https://your-backend-domain.railway.app/api
NEXTAUTH_URL=https://your-frontend-domain.railway.app
NEXTAUTH_SECRET=your-nextauth-secret-key-2025

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@schedulemanager.com

# Security
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
